<div class="container bg-1 text-center landing ">
  <div class="background-div">
    <div class="logo-container">
      <div class="logo-div"><a href="#"> <img class="logo" src="<%= asset_path 'logo.png' %>"></a></div>
      <div class="login-form">
        <div class="card card-container">
          <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
          <img id="logo-img" class="logo-img-card" src="<%= asset_path 'logo.png' %>"/>
          <p id="logo-name" class="logo-name-card">LOGIN TO ADMIN PANEL</p>
          <% if flash[:alert].present? %>
          <div class="alert alert-danger">
            <strong>Alert!</strong> <%= flash[:alert] %>
          </div>
          <% elsif flash[:notice].present? %>
              <div class="alert alert-success">
                <%= flash[:notice] %>
              </div>
          <% end %>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name) , html: {class:'form-signin'}) do |f| %>
            <span id="reauth-email" class="reauth-email"></span>
            <label>Email </label>
              <%= f.email_field :email, autofocus: true, id:'inputEmail', class:"login-field form-control", autocomplete: "email", required: true %>
            <label>Password</label>
              <%= f.password_field :password, id:"inputPassword", class:"login-field form-control" ,  autocomplete: "off" , required: true %>
              <% if devise_mapping.rememberable? -%>
                  <div class="checkbox checkbox-warning" id="remember">
                    <%= f.check_box :remember_me , id: 'remember_me' %>
                    <label class="remember" for="remember_me">
                      Remember me
                    </label>
                  </div>
              <% end -%>
              <%= f.submit "Login" , class:"btn btn-lg btn-primary btn-block btn-signin" %>
              <% end %>
          </form><!-- /form -->
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot Password?", new_password_path(resource_name) , class:"forgot-password" %><br />
            <% end -%>
        </div><!-- /card-container -->
      </div><!-- /container -->
    </div>
    <span class="footer-text">Powered by Fam Brands</span>
  </div>

</div>
<script>
    $(document).ready(function () {
        $(".login-form").hide();
        setTimeout(function () {

            $(".logo-div").hide();
            $(".login-form").show();
        }, 2000);
    });
</script>
